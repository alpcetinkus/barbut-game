<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tw_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:text="Button1"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tw_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Button2"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tw_1"
        app:layout_constraintRight_toLeftOf="@id/tw_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Button3"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tw_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tw_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Button4"
        android:textSize="12sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tw_2"
        app:layout_constraintTop_toBottomOf="@+id/tw_1" />

    <TextView
        android:id="@+id/tw_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Button5"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tw_1"
        app:layout_constraintRight_toLeftOf="@id/tw_3"
        app:layout_constraintTop_toBottomOf="@+id/tw_1" />

    <TextView
        android:id="@+id/tw_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Button6"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tw_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_1" />


    <TextView
        android:id="@+id/tw_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Button7"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tw_2"
        app:layout_constraintTop_toBottomOf="@+id/tw_4" />

    <TextView
        android:id="@+id/tw_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Button8"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tw_1"
        app:layout_constraintRight_toLeftOf="@id/tw_3"
        app:layout_constraintTop_toBottomOf="@+id/tw_4" />

    <TextView
        android:id="@+id/tw_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Button9"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tw_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_4" />


    <Button
        android:id="@+id/btn_guess"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#808080"
        android:text="Guess"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_7" />


    <EditText
        android:id="@+id/et_number_input"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="enter number"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_guess" />

    <TextView
        android:id="@+id/tw_guess_history"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#F2FB90"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="wrong guess"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_number_input" />

    <TextView
        android:id="@+id/tw_time"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#89ECD1"
        android:gravity="center"
        tools:text="remaining time"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_guess_history" />

    <TextView
        android:id="@+id/tw_hak"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="remaining Hak"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_time" />

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A14646"
        android:text="New Game"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_hak" />

</androidx.constraintlayout.widget.ConstraintLayout>